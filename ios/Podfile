platform :ios, '15.0'
use_frameworks! :linkage => :static
inhibit_all_warnings!

# ✅ حمّل podhelper.rb مباشرةً من Flutter SDK في Codemagic
flutter_root = ENV['FLUTTER_ROOT']
if flutter_root.nil? || flutter_root.empty?
  # مسار احتياطي بالاعتماد على مكان flutter binary
  flutter_bin = `which flutter`.strip
  # flutter/bin/flutter => ارجع ثلاث مستويات لمجلد الجذر
  flutter_root = File.expand_path('../../..', flutter_bin)
end
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      # استثناء arm64 للمُحاكي فقط (لا يؤثر على الأجهزة)
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
