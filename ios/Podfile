platform :ios, '15.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# ---- Ø­Ù„ Ù…ÙˆØ«ÙˆÙ‚ Ù„Ø§ÙƒØªØ´Ø§Ù FLUTTER_ROOT Ø¹Ù„Ù‰ CI ----
flutter_root = ENV['FLUTTER_ROOT']
if flutter_root.nil? || flutter_root.empty?
  begin
    machine = `flutter --version --machine 2>/dev/null`
    m = machine.match(/"flutterRoot"\s*:\s*"([^"]+)"/)
    flutter_root = m[1] unless m.nil?
  rescue
    flutter_root = nil
  end
end
if flutter_root.nil? || flutter_root.empty?
  which_flutter = `which flutter`.strip
  if !which_flutter.nil? && !which_flutter.empty?
    bin_dir = File.dirname(which_flutter)
    maybe_root = File.expand_path('..', bin_dir)
    candidate = File.join(maybe_root, 'flutter')
    flutter_root = candidate if File.exist?(candidate)
  end
end
raise 'âŒ FLUTTER_ROOT not resolved; cannot load podhelper.rb' if flutter_root.nil? || flutter_root.empty?
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
# ------------------------------------------------

# Ù†Ø¬Ø¨Ø± frameworks + modular headers
use_frameworks! :linkage => :static
use_modular_headers!

# ğŸ”’ Ø«Ø¨Ù‘Øª Ù†Ø³Ø®Ø© Firebase iOS SDK Ø¥Ù„Ù‰ 10.24.0 (Ù‚Ø¨Ù„ Swift 6)
$FirebaseSDKVersion = '10.24.0'

flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Ù‡Ø°Ù‡ ØªÙØ¬Ø¨Ø± Ø§Ù„Ù†Ø³Ø® Ø§Ù„Ø£Ù‚Ø¯Ù… Ø§Ù„Ù…ØªÙˆØ§ÙÙ‚Ø© Ù…Ø¹ Swift 5
  pod 'FirebaseCore',           $FirebaseSDKVersion
  pod 'FirebaseCoreInternal',   $FirebaseSDKVersion
  pod 'FirebaseInstallations',  $FirebaseSDKVersion
  pod 'FirebaseFirestore',      $FirebaseSDKVersion
  pod 'FirebaseAuth',           $FirebaseSDKVersion
  pod 'GoogleUtilities',        '~> 7.13'  # Ù…ØªÙˆØ§ÙÙ‚ Ù…Ø¹ Ø³Ù„Ø³Ù„Ø© 10.24
  # Ù„Ùˆ Ù„Ø§ ØªØ³ØªØ®Ø¯Ù… Auth Ø§Ø­Ø°Ù Ø§Ù„Ø³Ø·Ø± Ø£Ø¹Ù„Ø§Ù‡ Ø§Ù„Ø®Ø§Øµ Ø¨Ù€ FirebaseAuth
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # iOS 15 + Swift 5 + Ø¥Ø·ÙØ§Ø¡ Ø§Ù„Ù…ÙŠØ²Ø§Øª Ø§Ù„ØªØ¬Ø±ÙŠØ¨ÙŠØ©
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['SWIFT_VERSION']               = '5.0'
      config.build_settings['ENABLE_BITCODE']              = 'NO'
      config.build_settings['SWIFT_STRICT_CONCURRENCY']    = 'minimal'

      # ØªÙ†Ø¸ÙŠÙ Ø£ÙŠ ÙÙ„Ø§ØºØ§Øª ØªÙØ´ØºÙ‘Ù„ Swift 6
      flags = config.build_settings['OTHER_SWIFT_FLAGS']
      if flags.is_a?(String)
        cleaned = flags.split(' ').reject { |f|
          f.include?('enable-upcoming-feature') || f.include?('enable-experimental-feature') || f.include?('swift-version')
        }.join(' ')
        config.build_settings['OTHER_SWIFT_FLAGS'] = cleaned
      end

      # ØªØ£ÙƒØ¯ Ù…Ø§ÙƒÙˆ Ù…ÙŠØ²Ø§Øª ØªØ¬Ø±ÙŠØ¨ÙŠØ© Ù…ÙØ±ÙˆØ¶Ø©
      config.build_settings['SWIFT_ENABLE_EXPERIMENTAL_FEATURES'] = ''
    end
  end
end
